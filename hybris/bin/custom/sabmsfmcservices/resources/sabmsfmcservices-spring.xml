	<!--Service types to be served from Salesforce has to be added here-->
	<bean id="sabmSFMCService"
		  class="com.sabmiller.sfmc.service.impl.SabmSFMCServiceImpl">
		<property name="strategyMap">
			<map>
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestType).EMAIL}" value-ref="sabmEmailSFMCStrategy" />
                <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestType).SMS}" value-ref="sabmSmsFMCStrategy" />
			</map>
		</property>
	</bean>

	<!--SMS configuration which has to be sent via SalesForce has to be added here-->
    <bean id="sabmSmsFMCStrategy"
          class="com.sabmiller.sfmc.strategy.impl.SABMSmsSFMCStrategy">
		<property name="strategyToKeyMap">
			<map>
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TEST.code}" value="${sfmc.sms.template.test.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).CREDITAPPROVEDSMS.code}" value="${sfmc.sms.template.credit.approved.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).ORDERCUTOFFSMS.code}" value="${sfmc.sms.template.order.cutoff.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).ORDERDISPATCHED.code}" value="${sfmc.sms.template.order.dispatched.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDDELIVERED.code}" value="${sfmc.sms.template.tmd.delivered.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDINTRANSIT.code}" value="${sfmc.sms.template.tmd.inTransit.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDNEXTINQUEUE.code}" value="${sfmc.sms.template.tmd.NextInQueue.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDPASSETA.code}" value="${sfmc.sms.template.tmd.passETA.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDEXCEEDETA.code}" value="${sfmc.sms.template.tmd.exceedETA2h.key}" />
			</map>
		</property>
    </bean>

	<!--Email configuration which has to be sent via SalesForce has to be added here-->
	<bean id="sabmEmailSFMCStrategy"
		  class="com.sabmiller.sfmc.strategy.impl.SABMEmailSFMCStrategy">
		<property name="strategyToKeyMap">
			<map>
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestEmailTemplate).TEST.code}" value="${sfmc.email.template.test.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestEmailTemplate).CREDITAPPROVEDEMAIL.code}" value="${sfmc.email.template.credit.approved.key}" />
				<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestEmailTemplate).CREDITRECIEVEDEMAIL.code}" value="${sfmc.email.template.credit.recieved.key}" />
			</map>
		</property>
	</bean>

	<bean id="sabmDefaultSFMCStrategy"
		  class="com.sabmiller.sfmc.strategy.impl.SABMDefaultSFMCStrategyImpl">
	</bean>

	<bean id="sabmSFMCClient"
		  class="com.sabmiller.sfmc.client.SabmSFMCClient">
	</bean>

	
	<!--  Rest client for salesforce start -->

    <bean id="sabmSFRestClient" class="com.sabmiller.salesforcerestclient.SABMSFRestClient">
        <property name="connectionManager" ref="SFClientConnectionManager" />
    </bean>

    <bean id="SFHost" class="org.apache.hc.core5.http.HttpHost">
        <constructor-arg name="scheme" value="${sap.host.protocol}" />
        <constructor-arg name="hostname" value="${sap.host.name}" />
        <constructor-arg name="port" value="${sap.host.port}" />
    </bean>

    <bean id="SFClientbufferingRequestFactory" class="org.springframework.http.client.BufferingClientHttpRequestFactory">
        <constructor-arg type="org.springframework.http.client.ClientHttpRequestFactory" ref="SFClientRequestFactory" />
    </bean>

    <bean id="SFClientRequestFactory" class="com.sabmiller.salesforcerestclient.SABMSFHttpComponentsClientHttpRequestFactory">
        <constructor-arg type="com.sabmiller.salesforcerestclient.SABMSFRestClient" ref="sabmSFRestClient" />
        <property name="httpHost" ref="SFHost" />
        <property name="connectionTimeout" value="${salesforce.host.connection.timeout.milli.sec}" />
        <property name="connectTimeout" value="${salesforce.host.connection.timeout.milli.sec}" />
        <property name="readTimeout" value="${salesforce.host.connection.timeout.milli.sec}" />
        <property name="authCache" ref="SFAuthCache" />
        <property name="basicAuthScheme" ref="SFBasicAuthScheme" />
        <property name="localHttpcontext" ref="SFLocalHttpcontext" />
    </bean>

    <bean id="SFAuthCache" class="org.apache.hc.client5.http.impl.auth.BasicAuthCache" />
    <bean id="SFBasicAuthScheme" class="org.apache.hc.client5.http.impl.auth.BasicScheme" />
    <bean id="SFLocalHttpcontext" class="org.apache.hc.core5.http.protocol.BasicHttpContext" />

    <bean id="SFClientConnectionManager" class="org.apache.hc.client5.http.impl.io.PoolingHttpClientConnectionManager">
        <property name="defaultMaxPerRoute" value="${salesforce.host.max.route.connections}" />
        <property name="maxTotal" value="${salesforce.host.max.total.connections}" />
    </bean>
    
    <!-- <bean id="sabmSFRestTemplate" class="org.springframework.web.client.RestTemplate">
        <constructor-arg ref="SFClientbufferingRequestFactory" />       
    </bean> -->

    <bean id="sabmSFRestTemplate" class="org.springframework.web.client.RestTemplate">
        <constructor-arg ref="SFClientbufferingRequestFactory" />
        <property name="interceptors">
            <list>
                <ref bean="sabmSFRestRequestInterceptor" />
            </list>
        </property>
    </bean>

    <bean id="sabmSFRestRequestInterceptor" class="com.sabmiller.salesforcerestclient.SABMSFRestClientHttpRequestInterceptor"></bean>
    
    <bean id="sabmSalesForceAsyncLogHelper" class="com.sabmiller.salesforcerestclient.SabmSalesForceAsyncLogHelper"></bean>
    

    <!-- <bean id="restTemplate" class="org.springframework.web.client.RestTemplate" /> -->

    <!-- <bean id="defaultSABMPostRestRequestHandler" class="com.sabmiller.integration.restclient.commons.DefaultSABMPostRestRequestHandler"
            parent="sabmAbstractGetRestRequestHandler" /> -->

    <bean id="sabmSFPostRestRequestHandler" class="com.sabmiller.salesforcerestclient.DefaultSABMSFPostRestRequestHandler"
            parent="sabmSFAbstractGetRestRequestHandler">
        <property name="plainCredentials">
            <value>${salesforce.host.userid}:${salesforce.host.password}</value>
        </property>

    </bean>

    <bean id="sabmSFAbstractGetRestRequestHandler" class="com.sabmiller.salesforcerestclient.SABMSFAbstractGetRestRequestHandler"
            abstract="true">
        <property name="sabmRestTemplate" ref="sabmSFRestTemplate" />
    </bean>
    
    <!-- Rest client for salesforce end -->
    
    
    <alias name="sabmSalesForceAccessTokenRequestHandler" alias="sabmSalesForceAccessTokenRequestHandler" />
    <bean id="sabmSalesForceAccessTokenRequestHandler" class="com.sabmiller.salesforcerestclient.SABMSalesForceAccessTokenRequestHandler"
            parent="sabmSFPostRestRequestHandler">
    </bean>
    
    <alias name="sabmSalesForceCreditEmailSMSPostHandler" alias="sabmSalesForceCreditEmailSMSPostHandler" />
    <bean id="sabmSalesForceCreditEmailSMSPostHandler" class="com.sabmiller.salesforcerestclient.SABMSalesForceCreditEmailSMSPostHandler"
            parent="sabmSFPostRestRequestHandler">
    </bean>
    
    <alias name="sabmSalesForceTmdSMSPostHandler" alias="sabmSalesForceTmdSMSPostHandler" />
    <bean id="sabmSalesForceTmdSMSPostHandler" class="com.sabmiller.salesforcerestclient.SABMSalesForceTmdSMSPostHandler"
            parent="sabmSFPostRestRequestHandler">
    </bean>
    
    <alias name="sabmSalesForceWelcomeMailPostHandler" alias="sabmSalesForceWelcomeMailPostHandler" />
    <bean id="sabmSalesForceWelcomeMailPostHandler" class="com.sabmiller.salesforcerestclient.SABMSalesForceWelcomeMailPostHandler"
            parent="sabmSFPostRestRequestHandler">
    </bean>
            

	<util:map id="salesforceEventMap" key-type="java.lang.String" value-type="java.lang.String">
        <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).CREDITAPPROVEDSMS.code}" value="CREDITAPPROVEDSMS"/>
        <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).ORDERCUTOFFSMS.code}" value="ORDERCUTOFFSMS"/>
        <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).ORDERDISPATCHED.code}" value="ORDERDISPATCHED"/>
        <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDNEXTINQUEUE.code}" value="TMDNEXTINQUEUE"/>
        <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDDELIVERED.code}" value="TMDDELIVERED"/>
        <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDEXCEEDETA.code}" value="TMDEXCEEDETA"/>
        <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDINTRANSIT.code}" value="TMDINTRANSIT"/>
        <entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TMDPASSETA.code}" value="TMDPASSETA"/>
		<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestEmailTemplate).CREDITAPPROVEDEMAIL.code}" value="Credit Discrepancy Approved"/>
		<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestEmailTemplate).CREDITRECIEVEDEMAIL.code}" value="Credit Discrepancy Received"/>
		<entry key="#{T(com.sabmiller.sfmc.enums.SFMCRequestSMSTemplate).TEST.code}" value="10"/>
	</util:map>
	
	

</beans>
