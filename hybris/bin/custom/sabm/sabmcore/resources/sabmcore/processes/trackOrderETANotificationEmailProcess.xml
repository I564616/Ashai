<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="generateTrackOrderETANotificationEmail" name="trackOrderETANotificationEmailProcess"
         processClass="com.sabm.core.model.TrackOrderETANotificationEmailProcessModel" onError="error">

    <action id="generateTrackOrderETANotificationEmail" bean="generateTrackOrderETANotificationEmail">
        <transition name="OK" to="sendEmail"/>
        <transition name="NOK" to="error"/>
    </action>

    <action id="sendEmail" bean="sendEmail">
        <transition name="OK" to="success"/>
        <transition name="NOK" to="failed"/>
    </action>


    <end id="error" state="ERROR">Something went wrong.</end>
    <end id="failed" state="FAILED">Could not  email.</end>
    <end id="success" state="SUCCEEDED">Sent order ETA notification email.</end>

</process>


