<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="generateOrderDeliveredNotificationEmail" name="orderDeliveredNotificationEmailProcess"
		processClass="com.sabm.core.model.OrderDeliveredNotificationEmailProcessModel" onError="error">

	<action id="generateOrderDeliveredNotificationEmail" bean="generateOrderDeliveredNotificationEmail">
		<transition name="OK" to="sendEmail"/>
		<transition name="NOK" to="error"/>
	</action>

 	<action id="sendEmail" bean="sendEmail">
		<transition name="OK" to="success"/>
		<transition name="NOK" to="failed"/>
	</action>

	
	<end id="error" state="ERROR">Something went wrong.</end>
	<end id="failed" state="FAILED">Could not send order delivered notification email.</end>
	<end id="success" state="SUCCEEDED">Sent order delivered notification email.</end>

</process>
