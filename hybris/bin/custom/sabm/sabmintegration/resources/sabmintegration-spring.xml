        </property>
        <property name="responseClass">
            <value type="java.lang.Class">com.sabmiller.integration.sap.invoices.discrepancy.response.InvoiceItemDataResponse</value>
        </property>
    </bean>

    <bean id="productExclusionRequestHandler" class="com.sabmiller.integration.sap.productexclusion.ProductExclusionRequestHandler"
            parent="sabmSapPostRestRequestHandler" />

    <bean id="sabmSftpFileUpload" class="com.sabmiller.integration.salesforce.SabmSftpFileUpload">
