        <property name="requestUrl" value="${sap.get.invoice.validation.rest.uri}" />

        <property name="requestMethod">
            <value type="org.springframework.http.HttpMethod">POST</value>
        </property>
        <property name="responseClass">
            <value type="java.lang.Class">com.sabmiller.integration.sap.invoices.discrepancy.response.InvoiceValidationResponse</value>
        </property>

    </bean>



    <alias name="sabmInvoiceListRequestHandler" alias="sabmInvoiceListRequestHandler" />
    <bean id="sabmInvoiceListRequestHandler" class="com.sabmiller.integration.sap.invoice.InvoiceListRequestHandler" parent="sabmSapPostRestRequestHandler">
        <property name="sabmRestTemplate" ref="sabmSapRestTemplate" />
        <property name="requestUrl" value="${sap.get.invoicelist.rest.uri}" />

        <property name="requestMethod">
            <value type="org.springframework.http.HttpMethod">POST</value>
        </property>
        <property name="responseClass">
            <value type="java.lang.Class">com.sabmiller.integration.sap.invoices.discrepancy.response.InvoiceListResponse</value>
        </property>
    </bean>

    <alias name="sabmInvoiceItemDataRequestHandler" alias="sabmInvoiceItemDataRequestHandler" />
    <bean id="sabmInvoiceItemDataRequestHandler" class="com.sabmiller.integration.sap.invoice.InvoiceItemDataRequestHandler" parent="sabmSapPostRestRequestHandler">
        <property name="sabmRestTemplate" ref="sabmSapRestTemplate" />
        <property name="requestUrl" value="${sap.get.invoice.itemdata.rest.uri}" />

        <property name="requestMethod">
