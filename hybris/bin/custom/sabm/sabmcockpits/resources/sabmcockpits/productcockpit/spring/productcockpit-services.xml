<!-- . WARNING: This is the CUSTOM Spring WEB configuration file used for 
	cmscockpit . web application. -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

    <alias alias="synchronizationService" name="accSynchronizationService"/>
    <bean id="accSynchronizationService" class="de.hybris.platform.cockpit.services.sync.impl.SynchronizationServiceImpl"
          parent="defaultSynchronizationService">
        <property name="relatedReferencesTypesMap">
            <map merge="true">
                <entry key="Product">
                    <list>
                        <value>Product.productImages</value>
                    </list>
                </entry>
                <entry key="MediaContainer">
                    <list>
                        <value>MediaContainer.medias</value>
                    </list>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="productUOMMappingLabelProvider" class="com.sabmiller.cockpits.services.label.impl.ProductUOMMappingLabelProvider"/>

    <bean id="productSubchannelPopularityMappingLabelProvider"
          class="com.sabmiller.cockpits.services.label.impl.ProductSubchannelPopularityMappingLabelProvider"/>

    <alias alias="loginService" name="defaultLoginService"/>
    <bean id="defaultLoginService" class="com.sabmiller.cockpits.productcockpit.services.impl.LoginServiceImpl" scope="tenant">
        <property name="loginTokenDeleteService" ref="loginTokenDeleteService"/>
    </bean>
</beans>
