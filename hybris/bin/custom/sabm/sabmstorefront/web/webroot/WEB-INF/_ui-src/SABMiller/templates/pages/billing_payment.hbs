                     <li>12</li>
                 </ul>
               </div>
               <span class="pull-left">/</span>
               <div class="month pull-left">
                 <div data-value="" class="select-btn">YY</div>
                 <!-- DEV TO-DO: Add package options here -->
                 <ul class="select-items">
                     <li>01</li>
                     <li>02</li>
                     <li>03</li>
                     <li>04</li>
                     <li>05</li>
                     <li>06</li>
                     <li>07</li>
                     <li>08</li>
                     <li>09</li>
                     <li>10</li>
                     <li>11</li>
                     <li>12</li>
                 </ul>
               </div>
          </div>

          <div class="security">
              <input type="text" class="form-control" id="securityCode">
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-medium">Make payment</button>
      </form>

    </div>
</div>
