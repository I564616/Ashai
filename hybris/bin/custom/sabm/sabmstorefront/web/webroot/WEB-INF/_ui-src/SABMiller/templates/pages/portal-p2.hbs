---
title: Product Detail
bodyClass: home
layout: templates/layouts/layout-portal.hbs
---

{{> breadcrumbs}}

{{> navigation}}


<div class="row">

    <div class="col-lg-8">

        <h1 class="h1">Customer Search</h1>

        <p class="h2">Search by:</p>


        <form name="form" class="margin-top-30">

            <div class="row">

                <div class="form-group col-md-6" ng-class="{'has-error' : form.accountPayerNumber.$error.minlength}">
                    <label for="accountPayerNumber">Account/Payer number</label>

                    <input type="text"
                           class="form-control"
                           name="accountPayerNumber"
                           ng-model="accountPayerNumber"
                           id="accountPayerNumber"
                           ng-minlength="3">

                </div>

                <div class="form-group col-md-6" ng-class="{'has-error' : form.customerName.$error.minlength}">
                    <label for="customerName">Customer name</label>

                    <input type="text"
                           class="form-control"
                           name="customerName"
                           ng-model="customerName"
                           id="customerName"
                           ng-minlength="3">
                </div>

            </div>

            <div class="row">

                <div class="form-group col-md-6" ng-class="{'has-error' : form.address.$error.minlength}">
                    <label for="address">Address</label>
                    <input type="text"
                           class="form-control"
                           name="address"
                           ng-model="address"
                           id="address"
                           ng-minlength="3">
                </div>
                <div class="form-group col-md-6" ng-class="{'has-error' : form.suburb.$error.minlength}">
                    <label for="suburb">Suburb</label>
                    <input type="text"
                           class="form-control"
                           name="suburb"
                           ng-model="suburb"
                           id="suburb"
                           ng-minlength="3">
                </div>

            </div>

            <div class="row">

                <div class="form-group col-md-3">
                    <label>State</label>
                    <div class="select-list">
                        <div data-value="" class="select-btn">Select</div>
                        <ul class="select-items" style="display: none;">
                            <li data-value="ACT">ACT</li>
                            <li data-value="NSW">NSW</li>
                            <li data-value="NT">NT</li>
                            <li data-value="QLD">QLD</li>
                            <li data-value="SA">SA</li>
                            <li data-value="TAS">TAS</li>
                            <li data-value="VIC">VIC</li>
                            <li data-value="WA">WA</li>
                        </ul>
                    </div>
                </div>

                <div class="form-group col-md-2 col-md-push-3" ng-class="{'has-error' : form.postcode.$error.minlength}">
                    <label for="postcode">Postcode</label>

                    <input type="text"
                           class="form-control"
                           name="postcode"
                           ng-model="postcode"
                           id="postcode"
                           ng-minlength="3">
                </div>

            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <div class="offset-bottom-large">
                        <button type="submit" class="btn btn-primary btn-large btn-flex-fixed">Search</button>
                    </div>
                </div>
            </div>


        </form>

    </div>

</div>
