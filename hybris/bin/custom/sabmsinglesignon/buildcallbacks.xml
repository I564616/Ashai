	<macrodef name="patchSamlSSO">
		<sequential>
			<property name="securityConfigFile" value="${ext.samlsinglesignon.path}/web/webroot/WEB-INF/security/spring-security-config.xml"/>
			<property name="samlImplFile" value="${ext.samlsinglesignon.path}/lib/opensaml-saml-impl-4.1.1.jar"/>
			<if>
				<available file="${securityConfigFile}" />
				<then>
					<echo>PATCHING ${securityConfigFile} to update samlAuthenticationProvider bean</echo>
					<tempfile property="tempFile"/>
					<xslt style="${ext.sabmsinglesignon.path}/resources/sabmsinglesignon/beans-transform.xsl" in="${securityConfigFile}" out="${tempFile}"
						  classpath="${platformhome}/apache-ant/lib/ant-apache-xalan2.jar"/>
					<move file="${tempFile}" tofile="${securityConfigFile}" overwrite="true"/>
					<echo>Successfully patched ${securityConfigFile}</echo>
				</then>
				<else>
					<echo>ERROR!!!: ${securityConfigFile} file doesn't exist</echo>
					<fail message="${securityConfigFile} file doesn't exist"/>
				</else>
			</if>
			<if>
				<available file="${samlImplFile}" />
				<then>
					<echo>PATCHING ${samlImplFile} to update AbstractSubjectConfirmationValidator class</echo>
					<jar destfile="${samlImplFile}" update="true">
						<fileset dir="${ext.sabmsinglesignon.path}/classes" includes="**/AbstractSubjectConfirmationValidator*.class" />
					</jar>
					<echo>Successfully patched ${samlImplFile}</echo>
				</then>
				<else>
					<echo>ERROR!!!: ${samlImplFile} file doesn't exist</echo>
					<fail message="${samlImplFile} file doesn't exist"/>
				</else>
			</if>
		</sequential>
	</macrodef>
