<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		   http://www.springframework.org/schema/integration/file http://www.springframework.org/schema/integration/file/spring-integration-file.xsd
		   http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd
		   http://www.springframework.org/schema/integration/xml
    	   http://www.springframework.org/schema/integration/xml/spring-integration-xml.xsd
    	   http://www.springframework.org/schema/oxm http://www.springframework.org/schema/oxm/spring-oxm.xsd
    	   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
    xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-file="http://www.springframework.org/schema/integration/file"
	xmlns:int-http="http://www.springframework.org/schema/integration/http"
	xmlns:int-xml="http://www.springframework.org/schema/integration/xml"
	xmlns:int-mail="http://www.springframework.org/schema/integration/mail"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:oxm="http://www.springframework.org/schema/oxm">

	<!-- map the incoming webservice request to a channel -->
	<int-http:inbound-gateway id="inboundSalesOrderRequestGateway"
							  supported-methods="POST"
							  path="/services/salesorder"
							  request-channel="preSalesOrderImportChannel"
							  request-payload-type="java.lang.String"
							  reply-timeout="50000">

		<!-- <int-http:request-mapping consumes="application/xml"/> -->
	</int-http:inbound-gateway>

	<!--  salesOrder Channels -->
	<int:channel id="salesOrderChannel"/>
	<int:channel id="salesOrderRequestChannel"/>
	<int:channel id="salesOrderPersistRequestChannel"/>
	<int:channel id="salesOrderRequestValidationChannel"/>
	<int:channel id="salesOrderRequestSplitChannel"/>
	<int:channel id="salesOrderResponseChannel"/>
	<int:channel id="salesOrderValidationErrorChannel"/>
	<int:channel id="salesOrderItemsChannel"/>
	<int:channel id="salesOrderProcessingChannel"/>
	<int:channel id="convertToPOJOChannel"/>
	<int:channel id="splitSalesOrdersChannel"/>
	<int:channel id="preSalesOrderImportChannel"/>
	<int:channel id="salesOrderImportChannel"/>
	<int:channel id="postSalesOrderImportChannel"/>
	
	<!-- map of namespace prefix to URI -->
	<util:map id="salesOrderNamespaceMap">
		<entry key="salesOrderNs" value="urn:gl.sabmiller.com:com:3rdp:transdata" />
	</util:map>
	
	<int-xml:xpath-expression id="sons" expression="/salesOrderNs:SalesOrderInformation/MessageHeader/ID" namespace-map="salesOrderNamespaceMap"/>
	
	<int:chain id="pre-sales-order-import-chain" input-channel="preSalesOrderImportChannel" output-channel="salesOrderImportChannel">
		
		    <!--  Security filter -->
        <int-xml:validating-filter discard-channel="salesOrderXSDValidationErrorChannel"
                                   throw-exception-on-rejection="true"
                                   xml-validator="securityValidationFilter">
        </int-xml:validating-filter>
    	
		<!-- this is require to enrich the header to handle the content-type of type "application/xml" -->
		<int:header-enricher>	
		    <int:header name="content-type" value="application/xml"></int:header>
		</int:header-enricher>	

		<!--  Add payload Id to the header -->
		<int-xml:xpath-header-enricher id="salesOrderAddPayloadId" default-overwrite="true">                               
			<int-xml:header name="payloadId"                               
					        overwrite="true"                      
					        xpath-expression-ref="sons" 
					        evaluation-type="STRING_RESULT"/>
		</int-xml:xpath-header-enricher>

		<!--  Save the incoming payload in Hybris -->
		<int:service-activator ref="salesOrderImportService" method="savePayload" />
			
		
			
		<!--  Validate XML against schema -->
		<int-xml:validating-filter discard-channel="salesOrderXSDValidationErrorChannel"                    
		                          id="salesOrderValidationFilter"                                 
		                          schema-location="integration/salesorder/schema/sales-order.xsd"
		                          schema-type="xml-schema"              
		                          throw-exception-on-rejection="false">                     
		</int-xml:validating-filter>
		
			
	</int:chain>
	
	<int:chain id="sales-order-validation-error-chain" input-channel="salesOrderXSDValidationErrorChannel">
		<int:service-activator ref="salesOrderImportService" method="handleXSDValidationError"></int:service-activator>
	</int:chain>
	
	<int:chain id="import-salesOrder-chain" input-channel="salesOrderImportChannel" output-channel="postSalesOrderImportChannel">
		
		<!-- Split the salesOrders(salesOrders) into items creating a new document for each item-->
		<int-xml:xpath-splitter id="salesOrderItemDocumentSplitter" create-documents="true">
		    <int-xml:xpath-expression expression="/salesOrderNs:SalesOrderInformation/SalesOrder" namespace-map="salesOrderNamespaceMap"/>
		</int-xml:xpath-splitter>
	
		
		<!-- Convert Document to POJO -->	
		<int-xml:unmarshalling-transformer id="defaultsalesOrderUnmarshaller" unmarshaller="salesOrderUnmarshallingTransformer"/>
		
		<!--  Import salesOrder -->
		<int:service-activator ref="salesOrderImportService" method="executeImport"></int:service-activator>
		
	</int:chain>
	
	<int:chain id="post-salesOrder-import-chain" input-channel="postSalesOrderImportChannel" >
		<int:service-activator ref="salesOrderImportService" method="logImportStatus"></int:service-activator>
	</int:chain>
	
</beans>