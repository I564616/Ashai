<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		   http://www.springframework.org/schema/integration/file http://www.springframework.org/schema/integration/file/spring-integration-file.xsd
		   http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd
		   http://www.springframework.org/schema/integration/xml
    	   http://www.springframework.org/schema/integration/xml/spring-integration-xml.xsd
    	   http://www.springframework.org/schema/oxm http://www.springframework.org/schema/oxm/spring-oxm.xsd
    	   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd"
    xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-file="http://www.springframework.org/schema/integration/file"
	xmlns:int-http="http://www.springframework.org/schema/integration/http"
	xmlns:int-xml="http://www.springframework.org/schema/integration/xml"
	xmlns:int-mail="http://www.springframework.org/schema/integration/mail"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:oxm="http://www.springframework.org/schema/oxm">

	<!-- map the incoming webservice request to a channel -->
	<int-http:inbound-gateway id="inboundCustomerRequestGateway"
							  supported-methods="POST"
							  path="/services/customer"
							  request-channel="preCustomerImportChannel"
							  request-payload-type="java.lang.String"
							  reply-timeout="50000">

		<!-- <int-http:request-mapping consumes="application/xml"/> -->
	</int-http:inbound-gateway>

	<!--  Customer Channels -->
	<int:channel id="customerChannel"/>
	<int:channel id="customerRequestChannel"/>
	<int:channel id="customerPersistRequestChannel"/>
	<int:channel id="customerRequestValidationChannel"/>
	<int:channel id="customerRequestSplitChannel"/>
	<int:channel id="customerResponseChannel"/>
	<int:channel id="customerValidationErrorChannel"/>
	<int:channel id="customerItemsChannel"/>
	<int:channel id="customerProcessingChannel"/>
	<int:channel id="convertToPOJOChannel"/>
	<int:channel id="splitCustomersChannel"/>
	<int:channel id="preCustomerImportChannel"/>
	<int:channel id="customerImportChannel"/>
	<int:channel id="postCustomerImportChannel"/>
	
	
	<int:chain id="pre-customer-import-chain" input-channel="preCustomerImportChannel" output-channel="customerImportChannel">
		<!-- this is require to enrich the header to handle the content-type of type "application/xml" -->
	
		  <!--  Security filter -->
    
		  <int-xml:validating-filter discard-channel="customerXSDValidationErrorChannel"
                                   throw-exception-on-rejection="true"
                                   xml-validator="securityValidationFilter">
        </int-xml:validating-filter>
	
	
		<int:header-enricher>	
		    <int:header name="content-type" value="application/xml"></int:header>
		</int:header-enricher>	

		<!--  Add payload Id to the header -->
		<int-xml:xpath-header-enricher id="custAddPayloadId" default-overwrite="true">                               
			<int-xml:header name="payloadId"                               
					        overwrite="true"                      
					        xpath-expression="//*[local-name()='MessageHeader']/ID" 
					        evaluation-type="STRING_RESULT"/>
		</int-xml:xpath-header-enricher>

		<!--  Save the incoming payload in Hybris -->
		<int:service-activator ref="customerImportService" method="savePayload" />
		
		
			
		<!--  Validate XML against schema -->
		
		
		<int-xml:validating-filter discard-channel="customerXSDValidationErrorChannel"                    
		                          id="customerValidationFilter"                                 
		                          schema-location="integration/customer/schema/customer.xsd"
		                          schema-type="xml-schema"              
		                          throw-exception-on-rejection="false">                     
		</int-xml:validating-filter>
		
		
			
	</int:chain>
	
	<int:chain id="customer-validation-error-chain" input-channel="customerXSDValidationErrorChannel">
		<int:service-activator ref="customerImportService" method="handleXSDValidationError"></int:service-activator>
	</int:chain>
	
	<int:chain id="import-customer-chain" input-channel="customerImportChannel" output-channel="postCustomerImportChannel">
		
		<!-- Split the customers(customers) into items creating a new document for each item-->
		<int-xml:xpath-splitter id="customerItemDocumentSplitter" create-documents="true">
		    <int-xml:xpath-expression expression="//*[local-name()='Customer']"/>
		</int-xml:xpath-splitter>
	
		
		<!-- Convert Document to POJO -->	
		<int-xml:unmarshalling-transformer id="defaultCustomerUnmarshaller" unmarshaller="customerUnmarshallingTransformer"/>
		
		<!--  Import Customer -->
		<int:service-activator ref="customerImportService" method="executeImport"></int:service-activator>
		
	</int:chain>
	
	<int:chain id="post-customer-import-chain" input-channel="postCustomerImportChannel" >
		<int:service-activator ref="customerImportService" method="logImportStatus" />
	</int:chain>
	
</beans>