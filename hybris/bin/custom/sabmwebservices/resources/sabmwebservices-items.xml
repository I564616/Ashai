	<itemtypes>
		<itemtype code="MasterImport" autocreate="true" generate="true">	
			<description>Main import entity.A record will be created for each webservice request entity</description>
			<deployment table="ImportEntity" typecode="26000"/>
			<attributes>
				<attribute qualifier="payloadId" type="java.lang.String">
					<description>The unique payload Id for the request</description>
					<modifiers/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="referenceId" type="java.lang.String">
					<description>The reference Id for the batch request</description>
					<modifiers/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="entity" type="EntityTypeEnum">
					<description>The type of Import. Example : Customer, Product</description>
					<modifiers/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="status" type="DataImportStatusEnum">
					<description>This represents the plant id of the default customer plant</description>
					<modifiers unique="false" optional="true"/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="file" type="Media">
					<description>The cutoff time for the plant. If customer orders after the cutoff time, the delivery date would change</description>
					<modifiers/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="recordCount" type="java.lang.Integer">
					<description>The cutoff time for the plant. If customer orders after the cutoff time, the delivery date would change</description>
					<modifiers/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="payload" type="java.lang.String">
					<description>The cutoff time for the plant. If customer orders after the cutoff time, the delivery date would change</description>
					<modifiers/>
					<persistence type="property">
				         <columntype database="hsqldb">
				             <value>LONGVARCHAR</value>
				         </columntype>
				         
				         <columntype database="oracle">
				             <value>CLOB</value>
				         </columntype>
				         <columntype database="mysql">
				             <value>LONGTEXT</value>
				         </columntype>
				         <columntype database="sqlserver">
				             <value>nvarchar(max)</value>
				         </columntype>
				         <columntype>
				             <value>HYBRIS.LONG_STRING</value>
				         </columntype>
				     </persistence>
				</attribute>
				<attribute qualifier="error" type="java.lang.String">
					<description>Any error that occured at the high level even before splitting the entities</description>
					<modifiers/>
					<persistence type="property">
						<columntype database="oracle">
				             <value>CLOB</value>
				         </columntype>
				         <columntype database="mysql">
				             <value>LONGTEXT</value>
				         </columntype>
				         <columntype database="sqlserver">
				             <value>nvarchar(max)</value>
				         </columntype>
				         <columntype>
				             <value>HYBRIS.LONG_STRING</value>
				         </columntype>
					</persistence>
				</attribute>
			</attributes>
			<!-- Indexing payloadId for improving the performance of site -->
			<indexes>
      			<index name="MasterImportPLIDX">
         				<key attribute="payloadId"/>
     		    </index>
			</indexes>
		</itemtype>
		
