                            </tr>
                            <tr><td height="5"></td></tr>
                            <tr>
                                <td align="left" style="font-family: Helvetica;color: #42515a;font-size: 15px;line-height: 25px;">
                                    ${ctx.messages.sgaregisterBenefitquickly}
                                </td>
                            </tr>

                            <tr>
                                <td align="left" style="font-family: Helvetica;color: #42515a;font-size: 15px;line-height: 25px;">
                                    ${ctx.messages.sgaregisterBenefitview}
                                </td>
                            </tr>
                            <tr>
                                <td align="left" style="font-family: Helvetica;color: #42515a;font-size: 15px;line-height: 25px;">
                                    ${ctx.messages.sgaregisterBenefitmanage}
                                </td>
                            </tr>
                            <tr>
                                <td align="left" style="font-family: Helvetica;color: #42515a;font-size: 15px;line-height: 25px;">
                                    ${ctx.messages.sgaregisterBenefitupdate}
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>

                #end

                <tr><td height="15"></td></tr>

