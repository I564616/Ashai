                    </td>
                </tr>

                <tr><td height="25"></td></tr>

                #if(${ctx.payAccess})
                <tr>

                    <td colspan="5" style="font-family: Helvetica;color: #42515a;font-size: 15px;padding: 0px 0px 0px 10px;">
                        ${ctx.messages.getMessage('sgaregisterPayeraccessContent', ${ctx.payerEmail},${ctx.customerAccountName})}
                    </td>

                </tr>
                <tr><td height="20"></td></tr>
                #end
                <tr>
                    <td colspan="5" style="font-family: Helvetica;color: #42515a;font-size: 15px;padding: 0px 0px 0px 10px;">
                        ${ctx.messages.sgaCreateUserContactUstext1} <a href="${ctx.baseUrl}/contactus" style="color: #42515a; font-weight: 700;">contact us</a> #if(${ctx.payAccess})${ctx.messages.sgaCreateUserContactUstext2}#end ${ctx.messages.sgaCreateUserContactUstext3}
                    </td>

                </tr>

                <tr><td height="30"></td></tr>

                <tr>
                    <td colspan="5" style="font-family: Helvetica;color: #42515a;font-size: 15px;padding: 0px 0px 0px 10px;">
                        ${ctx.messages.sgaComment}
                    </td>

                </tr>
                <tr><td height="10"></td></tr>
                <tr>
                    <td colspan="5" style="font-family: Helvetica;color: #42515a;font-size: 15px;padding: 10px 0px 0px 10px;">
                        ${ctx.messages.sgaregisterCheers}
                    </td>
                </tr>

                <tr>
                    <td colspan="5" style="font-family: Helvetica;color: #42515a;font-size: 15px;padding: 5px 0px 0px 10px;">
                        ${ctx.messages.sgacomplimentaryClosing}
