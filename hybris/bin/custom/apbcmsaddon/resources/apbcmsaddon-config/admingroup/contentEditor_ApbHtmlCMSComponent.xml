    <custom-editors>
        <property qualifier="ApbHtmlCMSComponent.animationDelay" editorCode="pixelNumberEditor"/>
        <property qualifier="ApbHtmlCMSComponent.animationDuration" editorCode="pixelNumberEditor"/>
        <property qualifier="AsahiBannerComponent.media" editorCode="simpleMediaReferenceSelector">
            <parameter>
                <name>mimeTypes</name>
                <value>image/jpeg;image/gif;image/png</value>
            </parameter>
            <parameter>
                <name>allowCreate</name>
                <value>true</value>
            </parameter>
            <parameter>
                <name>predefinedValuesStrategy</name>
                <value>imageMediaPredefinedValuesStrategy</value>
            </parameter>
        </property>
        <property qualifier="ApbHtmlCMSComponent.content" editorCode="wysiwyg">
            <parameter>
                <name>inline</name>
                <value>true</value>
            </parameter>
            <parameter>
                <name>fckToolbarConfiguration</name>
                <value>
